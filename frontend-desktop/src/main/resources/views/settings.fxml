<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.moodtunes.controllers.SettingsController"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #E0BBE4, #FFDAB9); -fx-padding: 30;">

    <!-- Header -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="⚙️" style="-fx-font-size: 32px;"/>
        <Label text="SETTINGS"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #8B008B; -fx-letter-spacing: 2px;"/>
    </HBox>

    <Separator style="-fx-background-color: #B565D8;"/>

    <!-- Volume Control -->
    <VBox spacing="10"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15; -fx-border-color: #B565D8; -fx-border-width: 2; -fx-border-radius: 12;">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="🔊" style="-fx-font-size: 20px;"/>
            <Label text="Volume" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="volumeLabel" text="70%"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #FF69B4;"/>
        </HBox>

        <Slider fx:id="volumeSlider"
                min="0" max="100"
                majorTickUnit="25"
                minorTickCount="5"
                showTickLabels="false"
                showTickMarks="true"
                style="-fx-control-inner-background: #E0BBE4;"/>
    </VBox>

    <!-- Playback Settings -->
    <VBox spacing="10"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15; -fx-border-color: #B565D8; -fx-border-width: 2; -fx-border-radius: 12;">
        <Label text="Playback Options"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="🔀" style="-fx-font-size: 18px;"/>
            <Label text="Shuffle" style="-fx-font-size: 14px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <CheckBox fx:id="shuffleCheckbox"
                      style="-fx-text-fill: #8B008B;"/>
        </HBox>

        <Separator style="-fx-background-color: #E0BBE4;"/>

        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="🔁" style="-fx-font-size: 18px;"/>
            <Label text="Repeat" style="-fx-font-size: 14px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <CheckBox fx:id="repeatCheckbox"
                      style="-fx-text-fill: #8B008B;"/>
        </HBox>
    </VBox>

    <!-- Theme Selection -->
    <VBox spacing="10"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15; -fx-border-color: #B565D8; -fx-border-width: 2; -fx-border-radius: 12;">
        <Label text="🎨 Theme"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <RadioButton fx:id="retroThemeRadio" text="Retro (Pink/Purple)"
                     style="-fx-font-size: 14px;"/>
        <RadioButton fx:id="darkThemeRadio" text="Dark Mode"
                     style="-fx-font-size: 14px;"/>
        <RadioButton fx:id="lightThemeRadio" text="Light Mode"
                     style="-fx-font-size: 14px;"/>
    </VBox>

    <!-- Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="SAVE" onAction="#handleSave"
                style="-fx-background-color: linear-gradient(to bottom, #FF69B4, #FF1493); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-letter-spacing: 1px; -fx-padding: 12 30 12 30; -fx-background-radius: 8; -fx-border-color: #8B008B; -fx-border-width: 3; -fx-border-radius: 8; -fx-cursor: hand;"/>

        <Button text="CANCEL" onAction="#handleCancel"
                style="-fx-background-color: white; -fx-text-fill: #8B008B; -fx-font-size: 14px; -fx-font-weight: bold; -fx-letter-spacing: 1px; -fx-padding: 12 30 12 30; -fx-background-radius: 8; -fx-border-color: #8B008B; -fx-border-width: 3; -fx-border-radius: 8; -fx-cursor: hand;"/>
    </HBox>
</VBox>
