<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.moodtunes.controllers.PlaylistController"
      style="-fx-background-color: #FFE4E1;"
      fx:id="rootPane">

    <!-- Window Title Bar -->
    <HBox alignment="CENTER_LEFT" spacing="15"
          style="-fx-background-color: linear-gradient(to bottom, #E8E8E8 0%, #D0D0D0 100%);
                 -fx-border-color: #000000; -fx-border-width: 3; -fx-padding: 10;">
        <padding>
            <Insets top="5" right="10" bottom="5" left="10"/>
        </padding>

        <!-- Window control buttons on LEFT with labels INSIDE circles -->
        <HBox spacing="8" alignment="CENTER">
            <!-- Close button with X inside -->
            <StackPane>
                <Button fx:id="closeButton" onAction="#handleClose"
                        style="-fx-background-color: #FF6B6B; -fx-background-radius: 50%;
                               -fx-min-width: 20; -fx-min-height: 20; -fx-max-width: 20; -fx-max-height: 20;
                               -fx-border-color: #000000; -fx-border-width: 2; -fx-border-radius: 50%;
                               -fx-cursor: hand;"/>
                <Label text="Ã—" mouseTransparent="true"
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #000000;"/>
            </StackPane>

            <!-- Minimize button with - inside -->
            <StackPane>
                <Button fx:id="minimizeButton" onAction="#handleMinimize"
                        style="-fx-background-color: #FFD93D; -fx-background-radius: 50%;
                               -fx-min-width: 20; -fx-min-height: 20; -fx-max-width: 20; -fx-max-height: 20;
                               -fx-border-color: #000000; -fx-border-width: 2; -fx-border-radius: 50%;
                               -fx-cursor: hand;"/>
                <Label text="âˆ’" mouseTransparent="true"
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #000000;"/>
            </StackPane>

            <!-- Maximize button with square inside -->
            <StackPane>
                <Button fx:id="maximizeButton" onAction="#handleMaximize"
                        style="-fx-background-color: #6BCB77; -fx-background-radius: 50%;
                               -fx-min-width: 20; -fx-min-height: 20; -fx-max-width: 20; -fx-max-height: 20;
                               -fx-border-color: #000000; -fx-border-width: 2; -fx-border-radius: 50%;
                               -fx-cursor: hand;"/>
                <Label text="â˜" mouseTransparent="true"
                       style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #000000;"/>
            </StackPane>
        </HBox>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Title Text -->
        <Label text="MOODTUNES - PLAYLIST"
               style="-fx-font-family: 'Courier New'; -fx-font-size: 14px;
                      -fx-font-weight: bold; -fx-text-fill: #000000;"/>
    </HBox>

    <!-- Top Bar with Back Button (Settings button removed) -->
    <HBox alignment="CENTER_LEFT" spacing="20"
          style="-fx-background-color: #FFE4E1; -fx-border-color: #000000;
                 -fx-border-width: 0 3 0 3; -fx-padding: 20;">

        <Button text="â†" onAction="#handleBackButton"
                style="-fx-font-size: 18px; -fx-background-color: #FFF;
                       -fx-border-color: #000000; -fx-border-width: 2;
                       -fx-padding: 8 15; -fx-background-radius: 5; -fx-border-radius: 5;
                       -fx-cursor: hand;"/>

        <VBox alignment="CENTER" HBox.hgrow="ALWAYS" spacing="5">
            <Label text="Your Playlist"
                   style="-fx-font-family: 'Courier New'; -fx-font-size: 14px;
                          -fx-font-weight: bold; -fx-text-fill: #666666;"/>
            <Label fx:id="playlistTitle" text="Happy Vibes â™ª"
                   style="-fx-font-family: 'Courier New'; -fx-font-size: 32px;
                          -fx-font-weight: bold; -fx-text-fill: #FF69B4;"/>
        </VBox>
    </HBox>

    <!-- Search Bar Section -->
    <HBox alignment="CENTER_LEFT" spacing="10"
          style="-fx-background-color: #FFF4E6; -fx-border-color: #000000;
                 -fx-border-width: 0 3 0 3; -fx-padding: 15 20;">
        <Label text="ðŸ” SEARCH:"
               style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;
                      -fx-font-weight: bold; -fx-text-fill: #000000;"/>

        <TextField fx:id="searchField" promptText="Song name or artist..."
                   style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;
                          -fx-padding: 8 12; -fx-background-color: #FFFFFF;
                          -fx-border-color: #000000; -fx-border-width: 2;
                          -fx-background-radius: 5; -fx-border-radius: 5;
                          -fx-text-fill: #000000;"/>

        <Button fx:id="searchClearButton" text="âœ•"
                onAction="#handleClearSearch"
                style="-fx-font-family: 'Courier New'; -fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-background-color: #FFFFFF; -fx-text-fill: #000000;
                       -fx-border-color: #000000; -fx-border-width: 2;
                       -fx-padding: 8 12; -fx-background-radius: 5; -fx-border-radius: 5;
                       -fx-cursor: hand;"/>

        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Library Controls with Retro Button Styles -->
    <HBox alignment="CENTER_LEFT" spacing="15"
          style="-fx-background-color: #FFF4E6; -fx-border-color: #000000;
                 -fx-border-width: 0 3 3 3; -fx-padding: 15 20;">

        <Label text="SORT BY:"
               style="-fx-font-family: 'Courier New'; -fx-font-size: 14px;
                      -fx-font-weight: bold; -fx-text-fill: #000000;"/>

        <!-- Title Sort -->
        <VBox spacing="5">
            <Label text="TITLE"
                   style="-fx-font-family: 'Courier New'; -fx-font-size: 10px;
                          -fx-font-weight: bold; -fx-text-fill: #000000;"/>
            <ComboBox fx:id="sortTitleCombo" prefWidth="90"
                      style="-fx-font-family: 'Courier New'; -fx-font-size: 11px;
                             -fx-background-color: linear-gradient(to bottom, #B3FFD9 0%, #8FFFC4 100%);
                             -fx-border-color: #000000; -fx-border-width: 2;
                             -fx-background-radius: 5; -fx-border-radius: 5;
                             -fx-cursor: hand;"/>
        </VBox>

        <!-- Artist Sort -->
        <VBox spacing="5">
            <Label text="ARTIST"
                   style="-fx-font-family: 'Courier New'; -fx-font-size: 10px;
                          -fx-font-weight: bold; -fx-text-fill: #000000;"/>
            <ComboBox fx:id="sortArtistCombo" prefWidth="90"
                      style="-fx-font-family: 'Courier New'; -fx-font-size: 11px;
                             -fx-background-color: linear-gradient(to bottom, #FFFFFF 0%, #F0F0F0 100%);
                             -fx-border-color: #000000; -fx-border-width: 2;
                             -fx-background-radius: 5; -fx-border-radius: 5;
                             -fx-cursor: hand;"/>
        </VBox>

        <!-- Album Sort -->
        <VBox spacing="5">
            <Label text="ALBUM"
                   style="-fx-font-family: 'Courier New'; -fx-font-size: 10px;
                          -fx-font-weight: bold; -fx-text-fill: #000000;"/>
            <ComboBox fx:id="sortAlbumCombo" prefWidth="90"
                      style="-fx-font-family: 'Courier New'; -fx-font-size: 11px;
                             -fx-background-color: linear-gradient(to bottom, #FFFFFF 0%, #F0F0F0 100%);
                             -fx-border-color: #000000; -fx-border-width: 2;
                             -fx-background-radius: 5; -fx-border-radius: 5;
                             -fx-cursor: hand;"/>
        </VBox>

        <!-- Duration Sort -->
        <VBox spacing="5">
            <Label text="DURATION"
                   style="-fx-font-family: 'Courier New'; -fx-font-size: 10px;
                          -fx-font-weight: bold; -fx-text-fill: #000000;"/>
            <ComboBox fx:id="sortDurationCombo" prefWidth="130"
                      style="-fx-font-family: 'Courier New'; -fx-font-size: 11px;
                             -fx-background-color: linear-gradient(to bottom, #FFFFFF 0%, #F0F0F0 100%);
                             -fx-border-color: #000000; -fx-border-width: 2;
                             -fx-background-radius: 5; -fx-border-radius: 5;
                             -fx-cursor: hand;"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Song count badge (dynamic) -->
        <Label fx:id="songCountLabel" text="0 SONGS"
               style="-fx-font-family: 'Courier New'; -fx-font-size: 14px;
                      -fx-font-weight: bold; -fx-text-fill: #000000;
                      -fx-background-color: #FFD700; -fx-padding: 8 15;
                      -fx-border-color: #000000; -fx-border-width: 2;
                      -fx-background-radius: 15; -fx-border-radius: 15;"/>
    </HBox>

    <!-- Song List -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                style="-fx-background: #FFE4E1; -fx-background-color: #FFE4E1;
                       -fx-border-color: #000000; -fx-border-width: 0 3 0 3;">
        <VBox fx:id="songList" spacing="15" style="-fx-background-color: #FFE4E1;">
            <padding>
                <Insets top="20" right="20" bottom="120" left="20"/>
            </padding>
        </VBox>
    </ScrollPane>

    <!-- Mini Player (Retro Media Player Style) with Repeat/Shuffle -->
    <HBox fx:id="miniPlayer" alignment="CENTER" spacing="15"
          visible="false"
          style="-fx-background-color: linear-gradient(to bottom, #FFD93D 0%, #FFC107 100%);
                 -fx-border-color: #000000; -fx-border-width: 3 3 3 3;
                 -fx-padding: 15;">

        <!-- Album/Song Icon -->
        <VBox alignment="CENTER"
              style="-fx-background-color: #FF69B4; -fx-border-color: #000000;
                     -fx-border-width: 3; -fx-padding: 10;
                     -fx-background-radius: 5; -fx-border-radius: 5;">
            <Label text="â™ª" style="-fx-font-size: 28px; -fx-text-fill: #FFFFFF;"/>
        </VBox>

        <!-- Song Info -->
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label fx:id="nowPlayingSong" text="Now Playing"
                   style="-fx-font-family: 'Courier New'; -fx-font-size: 16px;
                          -fx-font-weight: bold; -fx-text-fill: #000000;"/>
            <Label fx:id="nowPlayingArtist" text="Artist"
                   style="-fx-font-family: 'Courier New'; -fx-font-size: 13px;
                          -fx-text-fill: #333333;"/>

            <!-- Time Slider with Interactive Control -->
            <HBox spacing="8" alignment="CENTER">
                <Label fx:id="currentTimeLabel" text="0:00"
                       style="-fx-font-family: 'Courier New'; -fx-font-size: 11px;
                              -fx-text-fill: #000000; -fx-min-width: 35;"/>
                <Slider fx:id="timeSlider" prefWidth="200" min="0" max="100" value="0"
                        style="-fx-control-inner-background: #FFFFFF;
                               -fx-padding: 0;"
                        HBox.hgrow="ALWAYS"/>
                <Label fx:id="totalTimeLabel" text="0:00"
                       style="-fx-font-family: 'Courier New'; -fx-font-size: 11px;
                              -fx-text-fill: #000000; -fx-min-width: 35;"/>
            </HBox>
        </VBox>

        <!-- Player Controls (Retro style) with Repeat/Shuffle -->
        <HBox spacing="10" alignment="CENTER"
              style="-fx-background-color: rgba(255,255,255,0.6); -fx-padding: 10 15;
                     -fx-border-color: #000000; -fx-border-width: 2;
                     -fx-background-radius: 8; -fx-border-radius: 8;">

            <!-- Repeat Button -->
            <Button fx:id="repeatButton" text="ðŸ”" onAction="#handleRepeat"
                    style="-fx-font-size: 16px; -fx-background-color: #FFFFFF;
                           -fx-text-fill: #000000; -fx-border-color: #000000;
                           -fx-border-width: 2; -fx-padding: 6 10;
                           -fx-background-radius: 5; -fx-border-radius: 5;
                           -fx-cursor: hand;"/>

            <Button fx:id="prevButton" text="â®" onAction="#handlePrevious"
                    style="-fx-font-size: 20px; -fx-background-color: #FFFFFF;
                           -fx-text-fill: #000000; -fx-border-color: #000000;
                           -fx-border-width: 2; -fx-padding: 8 15;
                           -fx-background-radius: 5; -fx-border-radius: 5;
                           -fx-cursor: hand;"/>
            <Button fx:id="playPauseButton" text="â¸" onAction="#handlePlayPause"
                    style="-fx-font-size: 24px; -fx-background-color: #FF69B4;
                           -fx-text-fill: #FFFFFF; -fx-border-color: #000000;
                           -fx-border-width: 3; -fx-padding: 10 18;
                           -fx-background-radius: 50%; -fx-border-radius: 50%;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 2, 2);"/>
            <Button fx:id="nextButton" text="â­" onAction="#handleNext"
                    style="-fx-font-size: 20px; -fx-background-color: #FFFFFF;
                           -fx-text-fill: #000000; -fx-border-color: #000000;
                           -fx-border-width: 2; -fx-padding: 8 15;
                           -fx-background-radius: 5; -fx-border-radius: 5;
                           -fx-cursor: hand;"/>

            <!-- Shuffle Button -->
            <Button fx:id="shuffleToggleButton" text="ðŸ”€" onAction="#handleShuffleToggle"
                    style="-fx-font-size: 16px; -fx-background-color: #FFFFFF;
                           -fx-text-fill: #000000; -fx-border-color: #000000;
                           -fx-border-width: 2; -fx-padding: 6 10;
                           -fx-background-radius: 5; -fx-border-radius: 5;
                           -fx-cursor: hand;"/>
        </HBox>

        <!-- Volume Control -->
        <VBox alignment="CENTER" spacing="3">
            <Label text="ðŸ”Š" style="-fx-font-size: 20px;"/>
            <Slider fx:id="volumeSlider" orientation="VERTICAL" min="0" max="100" value="70"
                    prefHeight="60" prefWidth="20"
                    style="-fx-control-inner-background: #FFFFFF;
                           -fx-padding: 0;"
                    onMouseReleased="#handleVolumeChange"/>
        </VBox>
    </HBox>
</VBox>
